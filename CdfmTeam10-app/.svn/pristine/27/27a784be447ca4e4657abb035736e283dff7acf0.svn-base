<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/mainScrollLayout" >

    <LinearLayout style="@style/mainLinearLayout" >

        <!-- Activity titles - start -->

        <LinearLayout style="@style/activityLinearLayout" >

            <LinearLayout style="@style/activityTitleLayout" >

                <TextView
                    style="@style/activityTitle"
                    android:text="@string/lblMyAccount" />

                <View
                    style="@style/activityBar"
                    android:layout_width="match_parent" />
            </LinearLayout>

            <TextView
                style="@style/activitySubTitle"
                android:text="@string/lblMyPersonalInfo" />
        </LinearLayout>
        <!-- Activity titles - end -->

        <EditText
            android:id="@+id/edtFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:ems="10"
            android:enabled="false"
            android:hint="@string/lblFirstName"
            android:inputType="none" />

        <EditText
            android:id="@+id/edtSurName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:ems="10"
            android:enabled="false"
            android:hint="@string/lblSurName"
            android:inputType="none" />

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:ems="10"
            android:enabled="false"
            android:hint="@string/lblEmail"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/edtAddressLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:ems="10"
            android:enabled="false"
            android:hint="@string/lblAddressLine"
            android:inputType="none" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/edtAddressZipCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:enabled="false"
                android:hint="@string/lblAddressZipCode"
                android:inputType="none" />

            <EditText
                android:id="@+id/edtAddressCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:ems="10"
                android:enabled="false"
                android:hint="@string/lblAddressCity"
                android:inputType="none" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>