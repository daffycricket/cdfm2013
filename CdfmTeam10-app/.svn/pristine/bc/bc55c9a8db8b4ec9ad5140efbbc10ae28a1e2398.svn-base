<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lblMyAccount" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnMyFavorites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lblMyFavorites" />

        <Button
            android:id="@+id/btnMyEvents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lblMyEvents" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnMyParams"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lblMyParams" />

        <Button
            android:id="@+id/btnMyAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lblMyPersonalInfo" />
    </LinearLayout>

    <Button
        android:id="@+id/btnDisconnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/lblDisconnect" />

</LinearLayout>